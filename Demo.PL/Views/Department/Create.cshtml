
@{
    ViewData["Title"] = "Create";
}

@model DepartmentViewModel;

<div>
    <h3 class="alert alert-danger">@ViewBag.Message</h3>
</div>

<div>
    <h3 class="alert alert-danger">@ViewData["Message"] </h3>
</div>

<div>
    <h3 class="alert alert-danger">@TempData["Message"] </h3>
</div>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="@Model.Code" class="col-for-label">Code</label>
        <input asp-for="@Model.Code" class="form-control"/>
        <span asp-validation-for="@Model.Code" class="text-danger"></span>
    </div>
     <div>
        <label asp-for="@Model.Name" class="col-for-label">Name</label>
        <input asp-for="@Model.Name" class="form-control"/>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <input type="submit" value="Add" class="btn btn-primary"/>
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>

@section Scripts{
    <partial name = "_ValidationScriptsPartial" />
}

