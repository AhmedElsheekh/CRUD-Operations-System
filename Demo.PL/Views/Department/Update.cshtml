@model DepartmentViewModel;
@{
    ViewData["Title"] = "Update";
}

<form asp-action="Update">
    <div class="form-group">
        <label asp-for="@Model.Code" class="col-for-label">Code</label>
        <input asp-for="@Model.Code" class="form-control"/>
        <span asp-validation-for="@Model.Code" class="text-danger"></span>
    </div>
     <div>
        <label asp-for="@Model.Name" class="col-for-label">Name</label>
        <input asp-for="@Model.Name" class="form-control"/>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <input type="submit" value="Update" class="btn btn-primary"/>
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

