@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<form asp-action="Index">
    <div class="row">
        <div class="col-sm-8">
            <input type="text" placeholder="Serach" name="SearchValue" class="form-control"/>
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </div>
</form>

<br />

<h1>All Users</h1>

@if (Model?.Count() > 0)
{
                <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
                  <tbody>
                    <tr>

                      <td>@item.Id</td>
                      <td>@item.Email</td>
                      <td>@item.Username</td>
                      <td>
                          <a class="btn btn-primary" asp-controller="User" asp-action="Details" asp-route-id = "@item.Id">Details</a>  
                      </td>
                      <td>
                          <a class="btn btn-primary"  asp-controller="User" asp-action="Delete" asp-route-id = "@item.Id">Delete</a>
                      </td>
                      <td>
                          <a class="btn btn-primary" asp-controller="User" asp-action="Update" asp-route-id = "@item.Id">Update</a>
                      </td>
                    </tr>

                  </tbody>

        }
              </table>
}
else
{
        <h1 class = "bg-warning">No Users Found</h1>
}

