@model EmployeeViewModel;

<div>
    <label class="col-for-label" asp-for="@Model.Name"></label>
    <input asp-for="@Model.Name" class="form-control" readonly/>
</div>
<div>
    <img src="~/Files/Images/@Model.ImageUrl" class="img-circle" height="40" width="40" alt="Employee Image"/>
    <input asp-for="@Model.ImageUrl" class="form-control" hidden/>
</div>
<div>
    <label class="col-for-label" asp-for="@Model.Address"></label>
    <input asp-for="@Model.Address" class="form-control" readonly/>
</div>
<div>
    <label class="col-for-label" asp-for="@Model.Salary"></label>
    <input asp-for="@Model.Salary" class="form-control" readonly/>
</div>
    <div>
    <label class="col-for-label" asp-for="@Model.Email"></label>
    <input asp-for="@Model.Email" class="form-control" readonly/>
</div>
<div>
    <label class="col-for-label" asp-for="@Model.HireDate"></label>
    <input asp-for="@Model.HireDate" class="form-control" readonly/>
</div>
<div>
    <label class="col-for-label" asp-for="@Model.DepartmentId"></label>
    <input asp-for="@Model.DepartmentId" class="form-control" readonly/>
</div>
<div>
    <label asp-for="@Model.IsActive" class="col-for-label"></label>
    @if (Model.IsActive)
    {
            <input value="Active" class="form-control" readonly/>
    }
    else
    {
            <input value="Not Active" class="form-control" readonly/>
    }
</div>
