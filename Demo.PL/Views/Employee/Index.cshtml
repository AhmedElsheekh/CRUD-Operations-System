@model IEnumerable<EmployeeViewModel>;

@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary"  asp-action="Create">Add New Employee</a>
<br />
<br />

<form asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search.." name="searchValue" class="form-control"/>
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block"/>
        </div>

    </div>
</form>


@if (Model?.Count() > 0)
{
    <h1>All Employees</h1>
                <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Image)</th>
            <th>@Html.DisplayNameFor(x => x.Address)</th>
            <th>@Html.DisplayNameFor(x => x.Salary)</th>
            <th>@Html.DisplayNameFor(x => x.Email)</th>
            <th>@Html.DisplayNameFor(x => x.IsActive)</th>
            <th>@Html.DisplayNameFor(x => x.HireDate)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
                  <tbody>
                    <tr>

                      <td>@item.Name</td>
                      <td>
                          <img src="~/Files/Images/@item.ImageUrl" class="img-circle" height="40" width="40" alt="Employee Image"/>
                      </td>
                      <td>@item.Address</td>
                       <td>@item.Salary</td>
                       <td>@item.Email</td>
                       <td>@item.IsActive</td>
                       <td>@item.HireDate.Day/@item.HireDate.Month/@item.HireDate.Year</td>
                      <td>
                          <a class="btn btn-primary" asp-controller="Employee" asp-action="Details" asp-route-id = "@item.Id">Details</a>  
                      </td>
                      <td>
                        <a class="btn btn-primary" asp-controller="Employee" asp-action="Update" asp-route-id = "@item.Id">Update</a>
                      </td>
                      <td>
                          <a class="btn btn-primary"  asp-controller="Employee" asp-action="Delete" asp-route-id = "@item.Id">Delete</a>
                      </td>
                    </tr>

                  </tbody>

        }
              </table>
}
else
{
        <h1 class = "bg-warning">No Employees Found</h1>
}

