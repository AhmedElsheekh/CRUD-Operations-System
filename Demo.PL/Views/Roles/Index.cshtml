
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<ApplicationRole>;

<a class="btn btn-primary"  asp-action="Create">Create New Role</a>
<br />
<h1>All Roles</h1>


@if (Model?.Count() > 0)
{
                <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Create At</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
                  <tbody>
                    <tr>

                      <td>@item.Id</td>
                      <td>@item.Name</td>
                      <td>@item.CreateAt</td>
                      <td>
                          <a class="btn btn-primary" asp-controller="Roles" asp-action="Details" asp-route-id = "@item.Id">Details</a>  
                      </td>
                      <td>
                          <a class="btn btn-primary"  asp-controller="Roles" asp-action="Delete" asp-route-id = "@item.Id">Delete</a>
                      </td>
                      <td>
                          <a class="btn btn-primary" asp-controller="Roles" asp-action="Update" asp-route-id = "@item.Id">Update</a>
                      </td>
                    </tr>

                  </tbody>

        }
              </table>
}
else
{
        <h1 class = "bg-warning">No Roles Found</h1>
}

